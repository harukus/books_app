<p id="notice"><%= notice %></p>

<h1>日報</h1>
<%= link_to Report.human_attribute_name(:newreport), new_report_path %>
<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:content) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
    <tr>
      <td><%= report.title %></td>
      <td><%= report.content %></td>
      <td><%= link_to Report.human_attribute_name(:show), report %></td>
      <td><%= link_to Report.human_attribute_name(:edit), edit_report_path(report) %></td>
      <td>
        <%= link_to Report.human_attribute_name(:destroy), report, method: :delete, data: { confirm: t(:confirmation) } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
